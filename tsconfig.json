{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020", "DOM","esnext"],
    "skipLibCheck": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "packages/**/*",
    "@types/**/*",
    "task/**/*",
    "example/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.spec.ts"
  ]
}